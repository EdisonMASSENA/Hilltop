{% extends "base.html.twig" %}
{% block body %}

    
       <div id="" class="">
            <div id="popup" class="popup">
                <h1 class="text-nowrap titre ">Création de votre compte</h1>
                <h1 class="text-center titre"><span class="jaune">Hill</span><span class="gras">Top</span></h1>
                <br>

               {{ form_start(form) }}
                    <div class="form-row " id="comptes" name="compte">
                        <div class="texte-center mx-auto text-nowrap d-flex flex-row align-items-center " id="compteArtiste">
                             {{ form_row(form.compteArtiste) }}
                            <label for="scales" class="pr-3"><span class="maigre">Compte</span> <span class="gras">Artiste</span></h1></label>
                             {{ form_row(form.compteFan) }}
                             <label for="scales"><span class="maigre">Compte</span> <span class="gras">Fan</span></h1></label>
                        </div>
                        
                    </div>

                    <br>

                    <div class="form-row">
                        <div class="form-group col-md-6  ">
                           {{ form_row(form.nom, {'label': "Nom"}) }}
                        </div>
                        <div class="form-group col-md-6 ">
                           {{ form_row(form.prenom, {'label': "Prénom"}) }}
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                          {{ form_row(form.username, {'label': "Nom d'utilisateur"}) }}
                        </div>
                        <div class="form-group col-md-6">
                          {{ form_row(form.email, {'label': "Email"}) }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                           {{ form_row(form.password, {'label': "Mot de passe"}) }}
                        </div>
                        <div class="form-group col-md-6 ">
                            {{ form_row(form.confirm_password, {'label': "Confirmer mot de passe"}) }}
                        </div>
                    </div>
                    <br>
                    <br>
                    <button type="submit" class="form-group col-md-12 btn btn-warning md-12">Valider votre compte</button>
                {{ form_end(form) }}
            </div>
       </div>
{% endblock %}