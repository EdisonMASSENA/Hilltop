{% extends "base.html.twig" %}

{% block body %}

    <h1 class="display-4 text-center my-4">Créer votre compte</h1>

    {{ form_start(form, {'attr': {'class': 'col-md-5 mx-auto'}}) }}

        {{ form_row(form.username, {'label': "Nom d'utilisateur"}) }}

        {{ form_row(form.email) }}

        {{ form_row(form.password, {'label': "Mot de passe"}) }}

        {{ form_row(form.confirm_password, {'label': "Confirmer votre mot de passe"}) }}

        <button type="submit" class="btn btn-dark">Inscription</button>

        <div class="d-flex justify-content-center">
            <p>Pas encore de compte? <strong><a href="{{ path('registration') }}">Créer un compte</a></strong> </p>
        </div>

    {{ form_end(form) }}
    
{% endblock %}